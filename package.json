{
  "name": "beady",
  "displayName": "Beady Project Manager",
  "description": "Manage Beady projects directly from VS Code.",
  "version": "0.1.0",
  "private": true,
  "publisher": "klabo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelklabo/beady.git"
  },
  "workspaces": [
    "packages/*",
    "tui",
    "web"
  ],
  "bugs": {
    "url": "https://github.com/joelklabo/beady/issues"
  },
  "homepage": "https://github.com/joelklabo/beady#readme",
  "keywords": [
    "beads",
    "project-management",
    "issue-tracker",
    "task-management"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "types": "./dist/extension.d.ts",
  "contributes": {
    "commands": [
      {
        "command": "beads.refresh",
        "title": "%command.beads.refresh%",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.search",
        "title": "%command.beads.search%",
        "icon": "$(search)"
      },
      {
        "command": "beads.clearSearch",
        "title": "%command.beads.clearSearch%",
        "icon": "$(clear-all)"
      },
      {
        "command": "beads.openBead",
        "title": "%command.beads.openBead%"
      },
      {
        "command": "beads.createBead",
        "title": "%command.beads.createBead%",
        "icon": "$(add)"
      },
      {
        "command": "beads.addDependency",
        "title": "%command.beads.addDependency%",
        "icon": "$(link)"
      },
      {
        "command": "beads.dependencyTree.pickRoot",
        "title": "%command.beads.dependencyTree.pickRoot%",
        "icon": "$(location)"
      },
      {
        "command": "beads.dependencyTree.addUpstream",
        "title": "%command.beads.dependencyTree.addUpstream%",
        "icon": "$(arrow-up)"
      },
      {
        "command": "beads.dependencyTree.addDownstream",
        "title": "%command.beads.dependencyTree.addDownstream%",
        "icon": "$(arrow-down)"
      },
      {
        "command": "beads.dependencyTree.remove",
        "title": "%command.beads.dependencyTree.remove%",
        "icon": "$(trash)"
      },
      {
        "command": "beads.editExternalReference",
        "title": "%command.beads.editExternalReference%"
      },
      {
        "command": "beads.visualizeDependencies",
        "title": "%command.beads.visualizeDependencies%",
        "icon": "$(graph)"
      },
      {
        "command": "beads.exportCsv",
        "title": "%command.beads.exportCsv%",
        "icon": "$(table)"
      },
      {
        "command": "beads.exportMarkdown",
        "title": "%command.beads.exportMarkdown%"
      },
      {
        "command": "beads.inlineStatusChange",
        "title": "%command.beads.inlineStatusChange%",
        "icon": "$(edit)"
      },
      {
        "command": "beads.clearSortOrder",
        "title": "%command.beads.clearSortOrder%",
        "icon": "$(list-ordered)"
      },
      {
        "command": "beads.toggleSortMode",
        "title": "%command.beads.toggleSortMode%",
        "icon": "$(list-tree)"
      },
      {
        "command": "beads.refreshActivityFeed",
        "title": "%command.beads.refreshActivityFeed%",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.filterActivityFeed",
        "title": "%command.beads.filterActivityFeed%",
        "icon": "$(filter)"
      },
      {
        "command": "beads.clearActivityFeedFilter",
        "title": "%command.beads.clearActivityFeedFilter%",
        "icon": "$(clear-all)"
      },
      {
        "command": "beads.activityFeed.openEvent",
        "title": "%command.beads.activityFeed.openEvent%"
      },
      {
        "command": "beads.activityFeed.openSelected",
        "title": "%command.beads.activityFeed.openSelected%"
      },
      {
        "command": "beads.openActivityFeedPanel",
        "title": "%command.beads.openActivityFeedPanel%",
        "icon": "$(timeline-open)"
      },
      {
        "command": "beads.deleteBeads",
        "title": "%command.beads.deleteBeads%",
        "icon": "$(trash)"
      },
      {
        "command": "beads.bulkUpdateStatus",
        "title": "%command.beads.bulkUpdateStatus%",
        "icon": "$(checklist)"
      },
      {
        "command": "beads.bulkAddLabel",
        "title": "%command.beads.bulkAddLabel%",
        "icon": "$(tag)"
      },
      {
        "command": "beads.bulkRemoveLabel",
        "title": "%command.beads.bulkRemoveLabel%",
        "icon": "$(tag)"
      },
      {
        "command": "beads.toggleFavorite",
        "title": "%command.beads.toggleFavorite%",
        "icon": "$(star)"
      },
      {
        "command": "beads.applyQuickFilterPreset",
        "title": "%command.beads.applyQuickFilterPreset%",
        "icon": "$(filter)"
      },
      {
        "command": "beads.clearQuickFilters",
        "title": "%command.beads.clearQuickFilters%",
        "icon": "$(clear-all)"
      },
      {
        "command": "beads.openInProgressPanel",
        "title": "%command.beads.openInProgressPanel%",
        "icon": "$(pulse)"
      },
      {
        "command": "beads.inlineEditTitle",
        "title": "%command.beads.inlineEditTitle%",
        "icon": "$(edit)"
      },
      {
        "command": "beads.inlineEditLabels",
        "title": "%command.beads.inlineEditLabels%",
        "icon": "$(tag)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beads",
          "title": "Beads",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "views": {
      "beads": [
        {
          "id": "beadsExplorer",
          "name": "Issues"
        },
        {
          "id": "activityFeed",
          "name": "Activity Feed"
        },
        {
          "id": "beadsDependencyTree",
          "name": "%view.dependencyTree.name%",
          "when": "config.beads.enableDependencyEditing"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Beads",
      "properties": {
        "beads.commandPath": {
          "type": "string",
          "default": "bd",
          "description": "Path to the bd CLI executable (defaults to 'bd' which should be in your PATH)"
        },
        "beads.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Override project root for beads commands"
        },
        "beads.dataFile": {
          "type": "string",
          "default": ".beads/issues.jsonl",
          "description": "Path to the beads data JSONL file (relative to the project root or absolute)"
        },
        "beads.staleThresholdMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Number of minutes after which an in-progress task is highlighted as stale. Tasks in progress longer than this threshold will be visually flagged to help identify potentially stuck work."
        },
        "beads.enableWorktreeGuard": {
          "type": "boolean",
          "default": true,
          "description": "Run worktree guard before mutating bd commands to prevent duplicate/unsafe worktrees"
        },
        "beads.autoApplyWorktreeLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show current worktree label in Beads views and tooltips"
        },
        "beads.exportMarkdown.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable the experimental Markdown export command for the Beads explorer. When disabled, the command and toolbar entry are hidden."
        },
        "beads.inlineStatusChange.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable the inline status change command for Beads items. When disabled, related commands and menus are hidden."
        },
        "beads.exportCsv.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable the experimental CSV export command for the Beads explorer. When disabled, the command and toolbar entry are hidden."
        },
        "beads.exportCsv.delimiter": {
          "type": "string",
          "default": ",",
          "markdownDescription": "Delimiter to use for CSV export. Accepts a single character, 'tab', or '\\\\t'."
        },
        "beads.exportCsv.includeBom": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Prefix CSV exports with a UTF-8 BOM (useful for Excel or apps that need BOM)."
        },
        "beads.feedback.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable the experimental feedback flow. When disabled, feedback commands and UI are hidden."
        },
        "beads.feedback.repository": {
          "type": "string",
          "default": "",
          "pattern": "^[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+$",
          "patternErrorMessage": "Use the GitHub owner/repo format, for example: acme/widgets",
          "markdownDescription": "Default GitHub repository for feedback issues (owner/repo). Required when feedback is enabled."
        },
        "beads.feedback.labels": {
          "type": "object",
          "default": {
            "bug": "bug",
            "feature": "enhancement",
            "question": "question",
            "other": "feedback"
          },
          "properties": {
            "bug": {
              "type": "string",
              "markdownDescription": "Label applied to bug reports"
            },
            "feature": {
              "type": "string",
              "markdownDescription": "Label applied to feature requests"
            },
            "question": {
              "type": "string",
              "markdownDescription": "Label applied to questions or requests for clarification"
            },
            "other": {
              "type": "string",
              "markdownDescription": "Fallback label when the feedback type is not specified"
            }
          },
          "additionalProperties": {
            "type": "string",
            "markdownDescription": "Extra feedback type -> label mappings (string)."
          },
          "markdownDescription": "Map feedback types to GitHub labels. Leave a value empty to skip labeling for that type."
        },
        "beads.feedback.useGitHubCli": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Use the GitHub CLI (gh) for feedback submission when available. Falls back to API when disabled."
        },
        "beads.feedback.includeAnonymizedLogs": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Allow attaching anonymized logs/metadata when sending feedback. Users are prompted before logs are included."
        },
        "beads.enableDependencyEditing": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable experimental dependency editing UI (add/remove). Requires bd CLI support; shows warning when CLI version is too old."
        },
        "beads.bulkActions.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable experimental bulk status/label actions in the tree and activity feed. When disabled, bulk commands and menus are hidden."
        },
        "beads.bulkActions.maxSelection": {
          "type": "integer",
          "default": 50,
          "minimum": 1,
          "maximum": 200,
          "markdownDescription": "Maximum number of items allowed in a bulk action selection. Values outside 1-200 are ignored and the default is used."
        },
        "beads.favorites.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable experimental favorites toggling. When disabled, favorite commands and menus are hidden."
        },
        "beads.favorites.useLabelStorage": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Store favorites using bd labels. When disabled, favorites are stored locally in workspaceState only."
        },
        "beads.favorites.label": {
          "type": "string",
          "default": "favorite",
          "markdownDescription": "Label name used when storing favorites via the bd CLI."
        },
        "beads.cli.timeoutMs": {
          "type": "number",
          "default": 15000,
          "minimum": 1000,
          "description": "Maximum time in milliseconds to wait for bd CLI commands before aborting (default: 15000)."
        },
        "beads.cli.retryCount": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 5,
          "description": "How many times to retry a bd CLI command after a timeout (default: 1). Set to 0 to disable retries."
        },
        "beads.cli.retryBackoffMs": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "maximum": 30000,
          "description": "Delay in milliseconds before each bd CLI retry attempt (default: 500)."
        },
        "beads.offlineDetection.thresholdMs": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 300000,
          "description": "Total elapsed time in milliseconds across retries before treating the bd CLI as offline (default: 30000)."
        },
        "beads.quickFilters.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable quick filter presets in the Beads explorer toolbar and command palette."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "beads.applyQuickFilterPreset",
          "when": "view == beadsExplorer && beads.quickFiltersEnabled",
          "group": "navigation@1.5"
        },
        {
          "command": "beads.clearQuickFilters",
          "when": "view == beadsExplorer && beads.quickFiltersEnabled && beads.activeQuickFilter != ''",
          "group": "navigation@1.6"
        },
        {
          "command": "beads.toggleSortMode",
          "when": "view == beadsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "beads.search",
          "when": "view == beadsExplorer",
          "group": "navigation@2"
        },
        {
          "command": "beads.clearSearch",
          "when": "view == beadsExplorer",
          "group": "navigation@3"
        },
        {
          "command": "beads.refresh",
          "when": "view == beadsExplorer",
          "group": "navigation@4"
        },
        {
          "command": "beads.createBead",
          "when": "view == beadsExplorer",
          "group": "navigation@5"
        },
        {
          "command": "beads.visualizeDependencies",
          "when": "view == beadsExplorer",
          "group": "navigation@6"
        },
        {
          "command": "beads.exportCsv",
          "when": "view == beadsExplorer && config.beads.exportCsv.enabled",
          "group": "navigation@7"
        },
        {
          "command": "beads.exportMarkdown",
          "when": "view == beadsExplorer && config.beads.exportMarkdown.enabled",
          "group": "navigation@7"
        },
        {
          "command": "beads.inlineStatusChange",
          "when": "view == beadsExplorer && config.beads.inlineStatusChange.enabled",
          "group": "navigation@8"
        },
        {
          "command": "beads.bulkUpdateStatus",
          "when": "view == beadsExplorer && beads.bulkActionsEnabled && beads.bulkActionsHasSelection",
          "group": "navigation@9"
        },
        {
          "command": "beads.bulkAddLabel",
          "when": "view == beadsExplorer && beads.bulkActionsEnabled",
          "group": "navigation@9"
        },
        {
          "command": "beads.bulkRemoveLabel",
          "when": "view == beadsExplorer && beads.bulkActionsEnabled",
          "group": "navigation@9"
        },
        {
          "command": "beads.clearSortOrder",
          "when": "view == beadsExplorer",
          "group": "1_sort@1"
        },
        {
          "command": "beads.filterActivityFeed",
          "when": "view == activityFeed",
          "group": "navigation@1"
        },
        {
          "command": "beads.clearActivityFeedFilter",
          "when": "view == activityFeed",
          "group": "navigation@2"
        },
        {
          "command": "beads.refreshActivityFeed",
          "when": "view == activityFeed",
          "group": "navigation@3"
        },
        {
          "command": "beads.openActivityFeedPanel",
          "when": "view == activityFeed",
          "group": "navigation@4"
        },
        {
          "command": "beads.toggleFavorite",
          "when": "view == beadsExplorer && beads.favoritesEnabled",
          "group": "navigation@9"
        },
        {
          "command": "beads.openInProgressPanel",
          "when": "view == beadsExplorer",
          "group": "navigation@6.5"
        },
        {
          "command": "beads.dependencyTree.pickRoot",
          "when": "view == beadsDependencyTree",
          "group": "navigation@1"
        },
        {
          "command": "beads.dependencyTree.addUpstream",
          "when": "view == beadsDependencyTree && config.beads.enableDependencyEditing",
          "group": "navigation@2"
        },
        {
          "command": "beads.dependencyTree.addDownstream",
          "when": "view == beadsDependencyTree && config.beads.enableDependencyEditing",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "beads.editExternalReference",
          "when": "view == beadsExplorer && viewItem == bead",
          "group": "navigation@1"
        },
        {
          "command": "beads.addDependency",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.enableDependencyEditing",
          "group": "navigation@2"
        },
        {
          "command": "beads.dependencyTree.addUpstream",
          "when": "view == beadsDependencyTree && viewItem == dependencyGroupUpstream && config.beads.enableDependencyEditing",
          "group": "navigation@1"
        },
        {
          "command": "beads.dependencyTree.addDownstream",
          "when": "view == beadsDependencyTree && viewItem == dependencyGroupDownstream && config.beads.enableDependencyEditing",
          "group": "navigation@1"
        },
        {
          "command": "beads.dependencyTree.remove",
          "when": "view == beadsDependencyTree && (viewItem == dependencyNodeUpstream || viewItem == dependencyNodeDownstream) && config.beads.enableDependencyEditing",
          "group": "inline@2"
        },
        {
          "command": "beads.exportCsv",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.exportCsv.enabled",
          "group": "navigation@3"
        },
        {
          "command": "beads.exportMarkdown",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.exportMarkdown.enabled",
          "group": "navigation@3"
        },
        {
          "command": "beads.inlineStatusChange",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.inlineStatusChange.enabled",
          "group": "navigation@4"
        },
        {
          "command": "beads.inlineStatusChange",
          "when": "view == activityFeed && viewItem == activityEvent && config.beads.inlineStatusChange.enabled",
          "group": "navigation@1"
        },
        {
          "command": "beads.deleteBeads",
          "when": "view == beadsExplorer && viewItem == bead",
          "group": "7_modification@1"
        },
        {
          "command": "beads.bulkUpdateStatus",
          "when": "view == beadsExplorer && viewItem == bead && beads.bulkActionsEnabled && beads.bulkActionsHasSelection",
          "group": "7_modification@2"
        },
        {
          "command": "beads.bulkAddLabel",
          "when": "view == beadsExplorer && viewItem == bead && beads.bulkActionsEnabled",
          "group": "7_modification@3"
        },
        {
          "command": "beads.bulkRemoveLabel",
          "when": "view == beadsExplorer && viewItem == bead && beads.bulkActionsEnabled",
          "group": "7_modification@4"
        },
        {
          "command": "beads.toggleFavorite",
          "when": "view == beadsExplorer && viewItem == bead && beads.favoritesEnabled",
          "group": "7_modification@5"
        },
        {
          "command": "beads.inlineEditTitle",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.inlineStatusChange.enabled",
          "group": "navigation@4"
        },
        {
          "command": "beads.inlineEditLabels",
          "when": "view == beadsExplorer && viewItem == bead && config.beads.inlineStatusChange.enabled",
          "group": "navigation@4"
        }
      ],
      "commandPalette": [
        {
          "command": "beads.bulkUpdateStatus",
          "when": "beads.bulkActionsEnabled && beads.bulkActionsHasSelection"
        },
        {
          "command": "beads.bulkAddLabel",
          "when": "beads.bulkActionsEnabled"
        },
        {
          "command": "beads.bulkRemoveLabel",
          "when": "beads.bulkActionsEnabled"
        },
        {
          "command": "beads.toggleFavorite",
          "when": "beads.favoritesEnabled"
        },
        {
          "command": "beads.applyQuickFilterPreset",
          "when": "beads.quickFiltersEnabled"
        },
        {
          "command": "beads.clearQuickFilters",
          "when": "beads.quickFiltersEnabled && beads.activeQuickFilter != ''"
        },
        {
          "command": "beads.openInProgressPanel"
        },
        {
          "command": "beads.inlineEditTitle",
          "when": "config.beads.inlineStatusChange.enabled"
        },
        {
          "command": "beads.inlineEditLabels",
          "when": "config.beads.inlineStatusChange.enabled"
        },
        {
          "command": "beads.inlineStatusChange",
          "when": "config.beads.inlineStatusChange.enabled"
        }
      ]
    },
    "keybindings": [
      {
        "command": "beads.deleteBeads",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus"
      },
      {
        "command": "beads.deleteBeads",
        "key": "backspace",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus && !inputFocus"
      },
      {
        "command": "beads.activityFeed.openSelected",
        "key": "space",
        "when": "focusedView == activityFeed && listHasSelectionOrFocus && !inputFocus"
      },
      {
        "command": "beads.inlineStatusChange",
        "key": "enter",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus && config.beads.inlineStatusChange.enabled && !inputFocus"
      },
      {
        "command": "beads.inlineEditTitle",
        "key": "f2",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus && config.beads.inlineStatusChange.enabled && !inputFocus"
      },
      {
        "command": "beads.inlineEditLabels",
        "key": "ctrl+shift+l",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus && config.beads.inlineStatusChange.enabled && !inputFocus",
        "mac": "cmd+shift+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run typecheck && npm run bundle",
    "typecheck": "tsc --noEmit",
    "compile": "tsc -b packages/platform-vscode/tsconfig.json",
    "bundle:types": "npm run build:core && tsc -p packages/platform-vscode/tsconfig.json --emitDeclarationOnly --outDir dist",
    "bundle": "npm run bundle:types && tsx scripts/esbuild.extension.ts",
    "bundle:watch": "npm run bundle -- --watch",
    "watch": "tsc -b packages/platform-vscode/tsconfig.json --watch --preserveWatchOutput",
    "build:core": "npm run -w @beads/core build",
    "build:vscode": "npm run -w @beads/platform-vscode build",
    "build:tui": "npm run -w @beads/tui build",
    "build:web": "node -e \"const fs=require('fs');const {spawnSync}=require('child_process');const hasPkg=fs.existsSync('packages/web/package.json')||fs.existsSync('web/package.json');if(!hasPkg){console.log('web workspace missing, skipping build');process.exit(0);}const cmd=process.platform==='win32'?'npm.cmd':'npm';const r=spawnSync(cmd,['run','-w','@beads/web','build'],{stdio:'inherit'});process.exit(r.status??1);\"",
    "lint": "eslint . --ext ts",
    "test": "npm run test:unit",
    "test:unit": "npm run compile && npm run test:unit:run",
    "test:unit:run": "mocha ./out/test/unit/**/*.test.js ./out/test/deps.add.test.js ./out/test/sanitization.test.js ./out/test/littleGlen.command-validation.test.js ./out/test/log-redaction.test.js ./out/test/activityFeed.timestamps.test.js ./out/test/title-format.test.js ./out/test/activityFeed.title-format.test.js ./out/test/multi-root.cli.test.js ./out/test/tooltips.security.test.js ./out/test/export.markdown.test.js ./out/test/export.csv.test.js ./out/test/bulk.status.test.js ./out/test/bulk.results.test.js ./out/test/bulk.labels.test.js ./out/test/favorites.persistence.test.js ./out/test/favorites.validation.test.js ./out/test/favorites.toggle.test.js ./out/test/inline.status.test.js ./out/test/inline.validation.test.js --exit",
    "test:bd-cli": "npm run compile && mocha ./out/test/bd-cli.test.js",
    "test:integration": "npm run compile && npm run bundle && node ./out/test/runTest.js",
    "test:stress": "./scripts/stress-test.sh",
