{
  "name": "beads-vscode",
  "displayName": "Beads Project Manager",
  "description": "Manage Beads projects directly from VS Code.",
  "version": "0.0.2",
  "publisher": "4UtopiaInc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kris-hansen/beads-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/kris-hansen/beads-vscode/issues"
  },
  "homepage": "https://github.com/kris-hansen/beads-vscode#readme",
  "keywords": [
    "beads",
    "project-management",
    "issue-tracker",
    "task-management"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beads.refresh",
        "title": "Beads: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.search",
        "title": "Beads: Search",
        "icon": "$(search)"
      },
      {
        "command": "beads.clearSearch",
        "title": "Beads: Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "beads.openBead",
        "title": "Beads: Open"
      },
      {
        "command": "beads.createBead",
        "title": "Beads: Create",
        "icon": "$(add)"
      },
      {
        "command": "beads.editExternalReference",
        "title": "Beads: Edit External Reference"
      },
      {
        "command": "beads.visualizeDependencies",
        "title": "Beads: Visualize Dependencies",
        "icon": "$(graph)"
      },
      {
        "command": "beads.clearSortOrder",
        "title": "Beads: Clear Manual Sort Order",
        "icon": "$(list-ordered)"
      },
      {
        "command": "beads.toggleSortMode",
        "title": "Beads: Cycle Sort Mode (ID \u2192 Status \u2192 Epic)",
        "icon": "$(list-tree)"
      },
      {
        "command": "beads.refreshActivityFeed",
        "title": "Beads: Refresh Activity Feed",
        "icon": "$(refresh)"
      },
      {
        "command": "beads.filterActivityFeed",
        "title": "Beads: Filter Activity Feed",
        "icon": "$(filter)"
      },
      {
        "command": "beads.clearActivityFeedFilter",
        "title": "Beads: Clear Activity Feed Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "beads.openActivityFeedPanel",
        "title": "Beads: Open Activity Feed Panel",
        "icon": "$(timeline-open)"
      },
      {
        "command": "beads.deleteBeads",
        "title": "Beads: Delete",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beads",
          "title": "Beads",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "views": {
      "beads": [
        {
          "id": "beadsExplorer",
          "name": "Issues"
        },
        {
          "id": "activityFeed",
          "name": "Activity Feed"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Beads",
      "properties": {
        "beads.commandPath": {
          "type": "string",
          "default": "bd",
          "description": "Path to the bd CLI executable (defaults to 'bd' which should be in your PATH)"
        },
        "beads.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Override project root for beads commands"
        },
        "beads.dataFile": {
          "type": "string",
          "default": ".beads/issues.jsonl",
          "description": "Path to the beads data JSONL file (relative to the project root or absolute)"
        },
        "beads.staleThresholdMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Number of minutes after which an in-progress task is highlighted as stale. Tasks in progress longer than this threshold will be visually flagged to help identify potentially stuck work."
        },
        "beads.enableWorktreeGuard": {
          "type": "boolean",
          "default": true,
          "description": "Run worktree guard before mutating bd commands to prevent duplicate/unsafe worktrees"
        },
        "beads.autoApplyWorktreeLabel": {
          "type": "boolean",
          "default": true,
          "description": "Show current worktree label in Beads views and tooltips"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "beads.toggleSortMode",
          "when": "view == beadsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "beads.search",
          "when": "view == beadsExplorer",
          "group": "navigation@2"
        },
        {
          "command": "beads.clearSearch",
          "when": "view == beadsExplorer",
          "group": "navigation@3"
        },
        {
          "command": "beads.refresh",
          "when": "view == beadsExplorer",
          "group": "navigation@4"
        },
        {
          "command": "beads.createBead",
          "when": "view == beadsExplorer",
          "group": "navigation@5"
        },
        {
          "command": "beads.visualizeDependencies",
          "when": "view == beadsExplorer",
          "group": "navigation@6"
        },
        {
          "command": "beads.clearSortOrder",
          "when": "view == beadsExplorer",
          "group": "1_sort@1"
        },
        {
          "command": "beads.filterActivityFeed",
          "when": "view == activityFeed",
          "group": "navigation@1"
        },
        {
          "command": "beads.clearActivityFeedFilter",
          "when": "view == activityFeed",
          "group": "navigation@2"
        },
        {
          "command": "beads.refreshActivityFeed",
          "when": "view == activityFeed",
          "group": "navigation@3"
        },
        {
          "command": "beads.openActivityFeedPanel",
          "when": "view == activityFeed",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "beads.editExternalReference",
          "when": "view == beadsExplorer && viewItem == bead",
          "group": "navigation@1"
        },
        {
          "command": "beads.deleteBeads",
          "when": "view == beadsExplorer && viewItem == bead",
          "group": "7_modification@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "beads.deleteBeads",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus"
      },
      {
        "command": "beads.deleteBeads",
        "key": "backspace",
        "when": "focusedView == beadsExplorer && listHasSelectionOrFocus && !inputFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext ts",
    "test": "npm run test:unit",
    "test:unit": "npm run compile && mocha ./out/test/unit/**/*.test.js ./out/test/sanitization.test.js",
    "test:bd-cli": "npm run compile && mocha ./out/test/bd-cli.test.js",
    "test:integration": "npm run compile && node ./out/test/runTest.js",
    "test:stress": "./scripts/stress-test.sh",
    "test:all": "npm run lint && npm run test:unit && npm run test:bd-cli",
    "guard": "./scripts/worktree-guard.sh",
    "bd": "./scripts/bd-wrapper.sh",
    "package": "vsce package",
    "publish": "vsce publish",
    "install-local": "npm run package && \"/Applications/Visual Studio Code - Insiders.app/Contents/Resources/app/bin/code\" --install-extension beads-vscode-*.vsix --force",
    "test:harness": "bash ./scripts/agent-harness/run-placeholder.sh",
    "test:tui:smoke": "echo 'TODO: add TUI smoke test' && exit 0",
    "test:web:skeleton": "echo 'Playwright skeleton disabled' && exit 0"
  },
  "devDependencies": {
    "@beads/bd": "^0.29.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "sanitize-html": "^2.17.0"
  }
}
