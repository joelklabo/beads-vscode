{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "../../src",
    "outDir": "../../out",
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "../../tmp/platform-vscode.tsbuildinfo",
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["../../src/**/*.ts", "../../src/**/*.tsx"],
  "exclude": [
    "../../node_modules",
    "../../.vscode-test",
    "../../tui",
    "../../out",
    "../../tmp"
  ],
  "references": [
    { "path": "../core" }
  ]
}
