{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node",
      "mocha"
    ],
    "skipLibCheck": true,
    "outDir": "./out",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "../tmp/tui.tsbuildinfo"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./out",
    "../node_modules",
    "../tmp"
  ],
  "references": [
    {
      "path": "../packages/core"
    },
    {
      "path": "../packages/ui-headless"
    }
  ]
}
